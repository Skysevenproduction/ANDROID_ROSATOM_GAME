<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="top">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"

        android:layout_height="fill_parent"
        android:layout_weight="7"
        android:background="@color/bg_color_under_status_bar">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:name="ru.skyseven.rosatom_game_android.StatusFragment"
            android:layout_weight="6"
            android:id="@+id/status"
            tools:layout="@layout/fragment_status_fragment" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:layout_marginBottom="3dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iconAnswer"
                        android:src="@drawable/img_right"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="10"
                        android:layout_marginTop="3dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="20"
                        android:id="@+id/passQuestionNumber"
                        android:textColor="@color/answer_number_text_color"
                        android:textSize="@dimen/text_size_status"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="9"
                    android:gravity="center_horizontal"
                    android:background="@color/bg_color_middle_right_answer"
                    android:id="@+id/bgLayoutTop">

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        android:id="@+id/bgLayoutMiddle"
        android:background="@color/bg_color_middle_right_answer">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:gravity="center_horizontal|top">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_bg_img"
                android:src="@drawable/progres_bg"
                android:scaleType="fitCenter"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_img_color1"
                android:src="@drawable/color_1"
                android:scaleType="fitCenter"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_img_color2"
                android:src="@drawable/color_2"
                android:scaleType="fitCenter" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_img_color3"
                android:src="@drawable/color_3"
                android:scaleType="fitCenter" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_img_color4"
                android:src="@drawable/color_4"
                android:scaleType="fitCenter" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_img_color5"
                android:src="@drawable/color_5"
                android:scaleType="fitCenter" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_img_color6"
                android:src="@drawable/color_6"
                android:scaleType="fitCenter" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_img_color7"
                android:src="@drawable/color_7"
                android:scaleType="fitCenter" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_img_color8"
                android:src="@drawable/color_8"
                android:scaleType="fitCenter" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/progress_up"
                android:scaleType="fitCenter" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5">

            <ru.skyseven.rosatom_game_android.widgets.AutoResizeTextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Первая в мире АЭС была введена в Обнинске в 1954 году и безаварийно проработала 50 лет.Первая в мире АЭС была введена в Обнинске в 1954 году и безаварийно проработала 50 лет."
                android:id="@+id/commentText"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="@dimen/text_size_answer"
                android:paddingTop="5dp"
                android:textColor="@color/white_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgTitleAnswer"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/title_wrong_answer" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg_color_middle_1"
        android:layout_weight="8">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/bg_color_middle_1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="6"
                    android:background="@color/bg_color_middle_right_answer"
                    android:id="@+id/bgLayoutBottom">

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:background="@color/bg_color_up_bottom"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView3"
                        android:src="@drawable/pleas_tap_for_next"
                        android:layout_margin="5dp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/bg_color_bottom_line"
            android:layout_weight="20">

        </LinearLayout>
    </LinearLayout>

</LinearLayout>